<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@color/background_color">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/baseline_person_24"
        android:background="@drawable/circle_background"
        android:contentDescription="Profile icon" />

    <TextView
        android:id="@+id/profile_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil će biti implementiran kasnije"
        android:textSize="18sp"
        android:textColor="@color/text_primary"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ovdje će biti prikazane informacije o korisniku:\n\n• Ime i prezime\n• Datum registracije\n• Razina educiranosti\n• Završeni kvizovi\n• Označeni moduli"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_regular"
        android:lineSpacingExtra="4dp" />

</LinearLayout>
